<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDetallePreguntaEditar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CAMBIAR PREGUNTA"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="30sp"
                >
            </TextView>

            <Spinner
                android:id="@+id/spinner_idioma_editar_pregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/black"
                >
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Pregunta"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/pregunta_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Respuesta 1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/respuesta1_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Respuesta 2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/respuesta2_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Respuesta 3"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/respuesta3_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Respuesta 4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/respuesta4_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Respuesta Correcta"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"
                >
            </TextView>

            <EditText
                android:id="@+id/respuesta_correcta_edicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                >
            </EditText>

            <Button
                android:id="@+id/boton_editar_pregunta_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="EDITAR PREGUNTA"
                android:layout_gravity="center"
                >
            </Button>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp">
            </Space>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>